{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["../common/*"],
      "@src/*": ["*"],
      "@/*": ["ts/*"],
      "@img/*": ["img/*"]
    }
  },
  "include": ["./**/*", "img"],
  "exclude": ["node_modules"]
}
