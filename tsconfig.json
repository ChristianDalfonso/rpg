{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": { "@src*": ["src/*"], "@*": ["src/ts*"], "@img/*": ["src/img/*"] }
  },
  "include": ["./src/**/*"]
}
