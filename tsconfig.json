{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@/*": ["src/ts/*"],
      "@img/*": ["src/img/*"]
    }
  },
  "include": ["./src/**/*"]
}
